#!/bin/sh
case "$1" in
    "C-d")
        trash=~/.local/share/Trash;
        mkdir -p "$trash"; 
        while read file; do
            mv "$file" "$trash"
        done ;;
    "C-r") 
        magick "$file" -rotate 90 "$file" ;;
    "C-m") 
        target="$(printf "" | dmenu -p 'Move to directory:')"
        mkdir -p "$target";
        while read file; do
            mv "$file" "$target"/
        done ;;
esac
