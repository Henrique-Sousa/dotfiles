{
  "java.jdt.ls.vmargs": "-Xmx512m -XX:+UseG1GC -XX:+UseStringDeduplication",
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "h"],
      "rootPatterns": [".ccls", "compile_commands.json", ".git/", ".hg/"],
      "initializationOptions": {
          "cache": {
            "directory": "/tmp/ccls"
          },
          "clang": {
              "extraArgs": ["-std=c++20"]
          }
        }
    }
  }
}
